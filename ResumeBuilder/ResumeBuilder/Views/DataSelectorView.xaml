<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="ResumeBuilder.Views.DataSelectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800" d:DesignHeight="450">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="職務経歴データを選択" FontSize="20" FontWeight="Bold"/>

        <!-- データ一覧 -->
        <ListView Grid.Row="1" ItemsSource="{Binding Entries}" SelectedItem="{Binding SelectedEntry, Mode=TwoWay}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="名称" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="最終更新" DisplayMemberBinding="{Binding LastModified}" Width="140"/>
                    <GridViewColumn Header="職種タグ" DisplayMemberBinding="{Binding Tag}" Width="140"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- 操作ボタン -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="新規作成" Command="{Binding NewCommand}" Width="90" Margin="8,0"/>
            <Button Content="開く" Command="{Binding OpenCommand}" Width="90" IsEnabled="False" Margin="8,0"/>
            <Button Content="削除" Command="{Binding DeleteCommand}" Width="90" IsEnabled="False" Margin="8,0"/>
        </StackPanel>
    </Grid>
</UserControl>