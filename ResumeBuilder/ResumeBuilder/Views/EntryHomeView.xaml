<UserControl x:Class="ResumeBuilder.Views.EntryHomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:ResumeBuilder.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- タイトル行（タイトル＋戻るボタン） -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="職務経歴データ"
                       FontSize="20"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>

            <Button Content="戻る"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Command="{Binding BackCommand}"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"/>
        </Grid>

        <!-- メイン表示領域 -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- プロフィール表示 + 編集 -->
            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,12">
                <GroupBox Header="プロフィール" DockPanel.Dock="Left" Width="600">
                    <StackPanel>
                        <TextBlock Text="{Binding Name}"/>
                        <TextBlock Text="{Binding Email}"/>
                        <TextBlock Text="{Binding Summary}" TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>
                <Button Content="編集"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding EditProfileCommand}"
                        VerticalAlignment="Bottom"
                        Margin="5"/>
            </DockPanel>

            <!-- 職歴・資格・スキル表示 + 編集 -->
            <DockPanel Grid.Row="1" LastChildFill="False">
                <GroupBox Header="職歴・資格・スキル" DockPanel.Dock="Left" Width="600">
                    <StackPanel>
                        <TextBlock Text="職歴:" FontWeight="Bold"/>
                        <ListBox ItemsSource="{Binding Careers}"/>

                        <TextBlock Text="資格:" FontWeight="Bold" Margin="0,8,0,0"/>
                        <ListBox ItemsSource="{Binding Qualifications}"/>

                        <TextBlock Text="スキル:" FontWeight="Bold" Margin="0,8,0,0"/>
                        <ListBox ItemsSource="{Binding Skills}"/>
                    </StackPanel>
                </GroupBox>
                <Button Content="編集"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding EditCareerCommand}"
                        VerticalAlignment="Bottom"
                        Margin="5"/>
            </DockPanel>

            <!-- プレビュー出力ボタン（画面右下） -->
            <Button Grid.Row="2"
                    Content="プレビュー/出力"
                    Style="{StaticResource PreviewButtonStyle}"
                    Command="{Binding PreviewCommand}"
                    HorizontalAlignment="Right"
                    Margin="0,16,8,0"/>
        </Grid>
    </Grid>
</UserControl>
